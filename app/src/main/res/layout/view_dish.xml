<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dish_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left|center"
                    android:padding="10dp"
                    android:src="@drawable/pulpo_a_la_gallega"/>

                <LinearLayout
                    android:id="@+id/dish_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulpo"/>

                    <TextView
                        android:id="@+id/dish_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35,6 â‚¬"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dish_allergens_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dish_allergen14"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_altramuz"/>
                <ImageView
                    android:id="@+id/dish_allergen13"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_apio"/>
                <ImageView
                    android:id="@+id/dish_allergen12"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_cacahuetes"/>
                <ImageView
                    android:id="@+id/dish_allergen11"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_cereal_con_gluten"/>
                <ImageView
                    android:id="@+id/dish_allergen10"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_crustaceos"/>
                <ImageView
                    android:id="@+id/dish_allergen9"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_frutos_secos"/>
                <ImageView
                    android:id="@+id/dish_allergen8"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_huevos"/>
                <ImageView
                    android:id="@+id/dish_allergen7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_lacteos"/>
                <ImageView
                    android:id="@+id/dish_allergen6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_moluscos"/>
                <ImageView
                    android:id="@+id/dish_allergen5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_mostaza"/>
                <ImageView
                    android:id="@+id/dish_allergen4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_pescado"/>
                <ImageView
                    android:id="@+id/dish_allergen3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_sesamo"/>
                <ImageView
                    android:id="@+id/dish_allergen2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_soja"/>
                <ImageView
                    android:id="@+id/dish_allergen1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/allergen_sulfitos"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>